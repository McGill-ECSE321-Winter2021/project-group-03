<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="ui.home.HomeFragment">

    <Button
        android:id="@+id/login"
        android:layout_width="197dp"
        android:layout_height="97dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#0A51F5"
        android:foregroundTint="#FFFFFF"
        android:text="@string/home_login"
        android:textColor="#FFFFFF"
        android:textSize="10pt"
        app:layout_constraintBottom_toTopOf="@+id/signUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="313dp"
        android:layout_height="138dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/isotope_repair_shop"
        android:textSize="20pt"
        app:layout_constraintBottom_toTopOf="@+id/bookAppointmentButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bookAppointmentButton"
        android:layout_width="193dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:text="@string/book_appointment"
        android:visibility="invisible"
        android:backgroundTint="#0A51F5"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ViewAppointmentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ViewAppointmentButton"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="48dp"
        android:text="@string/view_appointment"
        android:visibility="invisible"
        android:backgroundTint="#0A51F5"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintStart_toStartOf="@+id/login" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:text="@string/sign_hint"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="411dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="411dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="370dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="417dp"
        android:layout_height="223dp"
        android:src="@drawable/repair_shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        android:contentDescription="@string/car_repair_image" />

</androidx.constraintlayout.widget.ConstraintLayout>